#
# Executes commands at the start of an interactive session.
#

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Aliases
alias subl='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'
alias v='vim .'
alias dot='~/.dotfiles'
alias desk='~/Desktop'
alias del='rm -rf'
alias py='python3'

# Git Shortcuts
alias gp="git push origin"
alias gc="git commit"
alias ga="git add ."
alias gs="git status"
alias gitown="git config --global github.user 'bricerb' && git config --global user.name 'Brice Blanch' && git config --global user.email 'bricerb@gmail.com'"
alias gitinc="git config --global github.user 'rblanch-incomm' && git config --global user.name 'rblanch-incomm' && git config --global user.email 'rblanch@incomm.com'"

# Dumb & Fun
alias parrot='curl parrot.live'
alias weather='curl -4 wttr.in/Atlanta'

# Waiting Dots
COMPLETION_WAITING_DOTS="true"

# The Javas
export JAVA_HOME='/Library/Java/Home'
export PATH=${JAVA_HOME}/bin:$PATH

# Go
export GOPATH=/Users/Shared/git/goLangProject
export GOROOT=/usr/local/opt/go/libexec
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$GOROOT/bin